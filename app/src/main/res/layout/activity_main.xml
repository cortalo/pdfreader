<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:text="PDF Reader"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/onlinePdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Open Online PDF"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/pickPdfButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Pick PDF from Device"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/fromAssets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Open PDF from Assets"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/showInView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Show PDF in View"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/openInCompose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open in Compose imp"
        android:textAllCaps="false" />

</LinearLayout>